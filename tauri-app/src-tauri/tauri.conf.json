{
  "build": {
    "beforeDevCommand": "npm i && npm run dev",
    "beforeBuildCommand": "npm i && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Rain Orderbook",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "save": true,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "app", "dmg", "updater"],
      "identifier": "com.rainlanguage.orderbook",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
